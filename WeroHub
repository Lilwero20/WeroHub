local VALID_KEY = "WERO-8K2X7PL93QZDD"
local FILE_NAME = "werohub_key.txt"

-- Revisar si hay una key guardada v√°lida
local savedKey
pcall(function()
	if readfile then
		savedKey = readfile(FILE_NAME)
	end
end)

-- Si la key guardada no coincide con la v√°lida actual, eliminarla
if savedKey and savedKey ~= VALID_KEY and delfile then
	pcall(function()
		delfile(FILE_NAME)
	end)
	savedKey = nil
end

-- Si coincide, ejecutar directamente
if savedKey == VALID_KEY then
    shared.KeyValidated = true
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Lilwero20/WeroHub/main/WeroHub.lua"))()
    return
end


-- Crear GUI de key
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "KeySystem"
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 320, 0, 260)
frame.Position = UDim2.new(0.5, -160, 0.5, 400)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BorderSizePixel = 0
frame.Name = "MainFrame"
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 16)

local galaxyBG = Instance.new("ImageLabel", frame)
galaxyBG.Size = UDim2.new(1, 0, 1, 0)
galaxyBG.Position = UDim2.new(0, 0, 0, 0)
galaxyBG.Image = "rbxassetid://16948400568"
galaxyBG.BackgroundTransparency = 1
galaxyBG.ZIndex = 0

local function createFallingStar()
	local star = Instance.new("ImageLabel", frame)
	star.Size = UDim2.new(0, 4, 0, 4)
	star.BackgroundTransparency = 1
	star.Image = "rbxassetid://258128463"
	star.Position = UDim2.new(math.random(), 0, 0, -5)
	star.ZIndex = 10
	star.ImageColor3 = Color3.new(1,1,1)
	star.ImageTransparency = 0

	local endPos = UDim2.new(star.Position.X.Scale, star.Position.X.Offset, 1, 5)
	local tween = TweenService:Create(star, TweenInfo.new(math.random(3,6), Enum.EasingStyle.Linear), {
		Position = endPos,
		ImageTransparency = 1
	})
	tween:Play()
	tween.Completed:Connect(function() star:Destroy() end)
end

task.spawn(function()
	while frame.Parent do
		createFallingStar()
		task.wait(math.random(1,3)/10)
	end
end)

local title = Instance.new("TextLabel", frame)
title.Text = "üåå WeroHub Key System"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.ZIndex = 2

local textbox = Instance.new("TextBox", frame)
textbox.PlaceholderText = "Enter your key..."
textbox.Text = ""
textbox.Font = Enum.Font.Gotham
textbox.TextSize = 16
textbox.Size = UDim2.new(0.85, 0, 0, 36)
textbox.Position = UDim2.new(0.075, 0, 0.25, 0)
textbox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
textbox.ClearTextOnFocus = true
textbox.ZIndex = 2
Instance.new("UICorner", textbox).CornerRadius = UDim.new(0, 12)

local checkButton = Instance.new("TextButton", frame)
checkButton.Text = "‚úî Check Key"
checkButton.Font = Enum.Font.GothamSemibold
checkButton.TextSize = 16
checkButton.Size = UDim2.new(0.85, 0, 0, 36)
checkButton.Position = UDim2.new(0.075, 0, 0.45, 0)
checkButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
checkButton.TextColor3 = Color3.fromRGB(255, 255, 255)
checkButton.ZIndex = 2
Instance.new("UICorner", checkButton).CornerRadius = UDim.new(0, 12)

local getKeyButton = Instance.new("TextButton", frame)
getKeyButton.Text = "üîë Get Key"
getKeyButton.Font = Enum.Font.GothamSemibold
getKeyButton.TextSize = 16
getKeyButton.Size = UDim2.new(0.85, 0, 0, 36)
getKeyButton.Position = UDim2.new(0.075, 0, 0.63, 0)
getKeyButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
getKeyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
getKeyButton.ZIndex = 2
Instance.new("UICorner", getKeyButton).CornerRadius = UDim.new(0, 12)

local statusLabel = Instance.new("TextLabel", frame)
statusLabel.Text = ""
statusLabel.Font = Enum.Font.Gotham
statusLabel.TextSize = 14
statusLabel.Size = UDim2.new(1, 0, 0, 30)
statusLabel.Position = UDim2.new(0, 0, 0.83, 0)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(0, 255, 128)
statusLabel.ZIndex = 2

local closeButton = Instance.new("TextButton", frame)
closeButton.Text = "‚úñ"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 18
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.ZIndex = 2
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(1, 0)

TweenService:Create(frame, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
	Position = UDim2.new(0.5, -160, 0.5, -130),
	BackgroundTransparency = 0
}):Play()

local function executeScript()
	statusLabel.Text = "‚úÖ Executing Script..."
	task.wait(1)
	shared.KeyValidated = true
	if writefile then
		writefile(FILE_NAME, VALID_KEY)
	end
	loadstring(game:HttpGet("https://raw.githubusercontent.com/Lilwero20/WeroHub/main/WeroHub.lua"))()
	screenGui:Destroy()
end

checkButton.MouseButton1Click:Connect(function()
	if textbox.Text == VALID_KEY then
		executeScript()
	else
		statusLabel.Text = "‚ùå Invalid Key"

		-- Eliminar key guardada si es inv√°lida
		if delfile and readfile and pcall(function() return readfile(FILE_NAME) end) then
			delfile(FILE_NAME)
		end

		task.delay(2.5, function()
			if statusLabel.Text == "‚ùå Invalid Key" then
				statusLabel.Text = ""
			end
		end)
	end
end)

getKeyButton.MouseButton1Click:Connect(function()
	if setclipboard then setclipboard("https://loot-link.com/s?9rzu4aG3") end
	getKeyButton.Text = "‚úÖ Copied!"
	task.wait(1.5)
	getKeyButton.Text = "üîë Get Key"
end)

closeButton.MouseButton1Click:Connect(function()
	local tweenOut = TweenService:Create(frame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {
		Position = UDim2.new(0.5, -160, 0.5, 400),
		BackgroundTransparency = 1
	})
	tweenOut:Play()
	tweenOut.Completed:Wait()
	screenGui:Destroy()
end)

-- Arrastrar ventana
local dragging, dragInput, dragStart, startPos
frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then dragging = false end
		end)
	end
end)

frame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
end)

UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)
