local function copyToClipboard(text)
	if setclipboard then
		setclipboard(text)
	elseif toclipboard then
		toclipboard(text)
	else
		warn("Clipboard not supported")
	end
end

local function executeScript()
	statusLabel.Text = "‚úÖ Executing Script..."
	task.wait(1)
	loadstring(game:HttpGet("https://raw.githubusercontent.com/Lilwero20/WeroHub/refs/heads/main/WeroHub"))()
	screenGui:Destroy()
end

checkButton.MouseButton1Click:Connect(function()
	local text = textbox.Text
	if text == "Kshg74788UIy7778SD" then
		executeScript()
	else
		statusLabel.Text = "‚ùå Invalid Key"
	end
end)

getKeyButton.MouseButton1Click:Connect(function()
	copyToClipboard("https://lootdest.org/s?BNTs8pSe")
	getKeyButton.Text = "‚úÖ Copied!"
	task.wait(1.5)
	getKeyButton.Text = "üîë Get Key"
end)

closeButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- üîç Verifica si el usuario puso directamente: key:"ELKEY" loadstring(...)
task.wait(0.5) -- Espera breve para asegurar carga de GUI
local inputText = textbox.Text
if string.match(inputText, '^key:"(.-)"%s+loadstring') then
	local keyMatch = string.match(inputText, '^key:"(.-)"')
	if keyMatch == "Kshg74788UIy7778SD" then
		executeScript()
	end
end
