-- ðŸ”¹ Script Local (StarterGui o StarterPlayerScripts)
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- ðŸ”¹ Remotes
local RFCoinsShopServiceRequestBuy = ReplicatedStorage.Packages.Net["RF/CoinsShopService/RequestBuy"] -- RemoteFunction
local REUseItem = ReplicatedStorage.Packages.Net["RE/UseItem"]

-- ðŸ”¹ Variables
local running = false
local toolName = "Taser Gun"
local holding = false
local holdStart = 0

-- =================================
-- ðŸ”¹ GUI Toggle
-- =================================
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "TaserToggleGUI"
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 150, 0, 50)
frame.Position = UDim2.new(0.05, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.BackgroundTransparency = 0.2
frame.ZIndex = 10
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- ðŸ”¹ Toggle Button
local toggleButton = Instance.new("TextButton", frame)
toggleButton.Size = UDim2.new(1, -10, 1, -10)
toggleButton.Position = UDim2.new(0, 5, 0, 5)
toggleButton.Text = "ðŸ”´ OFF"
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 20
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
toggleButton.AutoButtonColor = true
toggleButton.Active = true -- âœ… el botÃ³n sÃ­ recibe taps/clicks
Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(0, 10)

-- ðŸ”¹ BotÃ³n para mÃ³viles (oculto hasta ON)
local mobileBtn = Instance.new("TextButton", screenGui)
mobileBtn.Size = UDim2.new(0, 80, 0, 80)
mobileBtn.Position = UDim2.new(0.85, 0, 0.75, 0)
mobileBtn.Text = "E"
mobileBtn.Font = Enum.Font.GothamBold
mobileBtn.TextSize = 26
mobileBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
mobileBtn.BackgroundColor3 = Color3.fromRGB(0, 0, 100)
mobileBtn.Visible = false
Instance.new("UICorner", mobileBtn).CornerRadius = UDim.new(1, 0)

-- =================================
-- ðŸ”¹ Hacer que el Frame sea draggable sin bloquear botones
-- =================================
local dragging = false
local dragStart, startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

-- =================================
-- ðŸ”¹ Funciones
-- =================================
local function buyAndEquip()
    local success, result = pcall(function()
        return RFCoinsShopServiceRequestBuy:InvokeServer(toolName)
    end)
    if not success then
        warn("Error al comprar:", result)
    end

    task.wait(0.5)
    local tool = player.Backpack:FindFirstChild(toolName)
    if tool then
        player.Character.Humanoid:EquipTool(tool)
    end
end

local function useTaserAndTeleport()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:FindFirstChild("HumanoidRootPart")

    if hrp then
        REUseItem:FireServer(hrp)
        -- TP 10 studs a la izquierda
        local leftVector = -hrp.CFrame.RightVector * 10
        hrp.CFrame = hrp.CFrame + leftVector
    end
end

-- ðŸ”¹ Detectar HOLD para PC
local function setupPCControls()
    UserInputService.InputBegan:Connect(function(input, gp)
        if running and input.KeyCode == Enum.KeyCode.E and not gp then
            holding = true
            holdStart = tick()
        end
    end)

    UserInputService.InputEnded:Connect(function(input, gp)
        if running and input.KeyCode == Enum.KeyCode.E and holding then
            holding = false
            local holdDuration = tick() - holdStart
            if holdDuration > 0.1 then
                task.wait(math.max(holdDuration - 0.1, 0))
            end
            useTaserAndTeleport()
        end
    end)
end

-- ðŸ”¹ Detectar HOLD para MÃ³vil
local function setupMobileControls()
    mobileBtn.MouseButton1Down:Connect(function()
        if running then
            holding = true
            holdStart = tick()
        end
    end)

    mobileBtn.MouseButton1Up:Connect(function()
        if running and holding then
            holding = false
            local holdDuration = tick() - holdStart
            if holdDuration > 0.1 then
                task.wait(math.max(holdDuration - 0.1, 0))
            end
            useTaserAndTeleport()
        end
    end)
end

-- ðŸ”¹ Iniciar/Detener
local function startTaser()
    running = true
    buyAndEquip()
    mobileBtn.Visible = UserInputService.TouchEnabled
end

local function stopTaser()
    running = false
    mobileBtn.Visible = false
end

-- =================================
-- ðŸ”¹ Toggle Logic
-- =================================
setupPCControls()
setupMobileControls()

toggleButton.MouseButton1Click:Connect(function()
    if running then
        stopTaser()
        toggleButton.Text = "ðŸ”´ OFF"
        toggleButton.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    else
        startTaser()
        toggleButton.Text = "ðŸŸ¢ ON"
        toggleButton.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
    end
end)
