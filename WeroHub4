local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Name = "WeroHub - Speed Boost",
    LoadingTitle = "WeroHub",
    LoadingSubtitle = "By WeroScripts",
    ConfigurationSaving = {
        Enabled = false
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

local Tab = Window:CreateTab("Speed", 4483362458)

Tab:CreateToggle({
    Name = "Speed Boost (Speed Coil)",
    CurrentValue = false,
    Flag = "SpeedCoilToggle",
    Callback = function(state)
        local player = game.Players.LocalPlayer
        local backpack = player:WaitForChild("Backpack")
        local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")

        -- Buscar el Speed Coil en el juego
        local function findSpeedCoil()
            -- Buscar en la mochila
            local tool = backpack:FindFirstChild("Speed Coil")
            if not tool then
                -- Buscar en ReplicatedStorage si hay una tienda
                local replicatedStorage = game:GetService("ReplicatedStorage")
                local item = replicatedStorage:FindFirstChild("Speed Coil")
                if item and item:IsA("Tool") then
                    tool = item:Clone()
                    tool.Parent = backpack
                end
            end
            return tool
        end

        if state then
            local coil = findSpeedCoil()
            if coil and humanoid then
                humanoid:EquipTool(coil)
                task.delay(0.5, function()
                    if humanoid and coil then
                        humanoid:UnequipTools()
                    end
                end)
            end
        else
            if humanoid then
                humanoid:UnequipTools()
            end
        end
    end,
})
