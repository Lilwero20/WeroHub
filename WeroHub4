local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Estado del toggle
local speedBypassActive = false
local speedConnection

-- Función para aplicar el speed bypass al personaje actual
local function applySpeedBypass()
	local character = player.Character or player.CharacterAdded:Wait()
	local humanoid = character:WaitForChild("Humanoid")

	-- Aplica velocidad deseada
	humanoid.WalkSpeed = 60

	-- Forzar constantemente
	if speedConnection then speedConnection:Disconnect() end
	speedConnection = RunService.RenderStepped:Connect(function()
		if humanoid and humanoid.WalkSpeed < 60 then
			humanoid.WalkSpeed = 60
		end
	end)
end

-- Función para desactivar bypass
local function removeSpeedBypass()
	local character = player.Character
	if character then
		local humanoid = character:FindFirstChild("Humanoid")
		if humanoid then humanoid.WalkSpeed = 34 end
	end
	if speedConnection then speedConnection:Disconnect() end
end

-- Restaurar bypass si mueres
player.CharacterAdded:Connect(function()
	task.wait(1) -- Esperar a que se cargue bien
	if speedBypassActive then
		applySpeedBypass()
	end
end)

-- Crear Rayfield GUI
local Window = Rayfield:CreateWindow({
	Name = "WeroHub",
	LoadingTitle = "WeroHub",
	LoadingSubtitle = "Cargando funcionalidades...",
	ConfigurationSaving = {
		Enabled = false
	},
	Discord = {
		Enabled = false
	},
	KeySystem = false,
})

local Tab = Window:CreateTab("TP y Bypass", 4483362458)

-- Toggle de velocidad
Tab:CreateToggle({
	Name = "Speed Bypass (60)",
	CurrentValue = false,
	Callback = function(Value)
		speedBypassActive = Value
		if Value then
			applySpeedBypass()
		else
			removeSpeedBypass()
		end
	end,
})

-- Botón de TP
Tab:CreateButton({
	Name = "Instant Steal (TP arriba)",
	Callback = function()
		local character = player.Character or player.CharacterAdded:Wait()
		local hrp = character:WaitForChild("HumanoidRootPart")
		local currentPosition = hrp.Position

		-- Subir y bajar en pasos
		local up = currentPosition + Vector3.new(0, 10, 0)
		hrp.CFrame = CFrame.new(up)
		task.wait(0.05)

		local high = currentPosition + Vector3.new(0, 50, 0)
		hrp.CFrame = CFrame.new(high)
		task.wait(0.05)

		local down = high - Vector3.new(0, 10, 0)
		local tween = TweenService:Create(hrp, TweenInfo.new(0.3, Enum.EasingStyle.Linear), {CFrame = CFrame.new(down)})
		tween:Play()
	end,
})
